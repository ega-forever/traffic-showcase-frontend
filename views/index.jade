doctype html
html(lang='en', ng-app="app")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
        meta(name='description', content='')
        meta(name='author', content='')
        link(rel='icon', href='../../favicon.ico')
        title Maps
        // Bootstrap core CSS
        link(href='../bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
        link(href='css/custom.css', rel='stylesheet')

    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') Maps
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li.active
                            a(href='#') Home
        .container.main-container
            .maps(ng-controller="mapCtrl as m")
                #map(style="height:400px;width:100%")
                .dropdown(style="position:absolute;top:80px;padding-left:10px")
                    button#dropdownMenu1.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='true')
                        | Buses
                        span.caret
                    ul.dropdown-menu(aria-labelledby='dropdownMenu1')
                        li(ng-repeat="bus in m.buses")
                            a(href='#', ng-click="m.setBus(bus.Id)") {{bus.name}}


                .panel.panel-default(style="margin-top:25px", ng-controller="infoListCtrl as infoCtrl")
                    .panel-body: table.table.table-striped
                        thead
                            tr
                                th #
                                th Param
                                th Value

                        tbody(ng-repeat="item in _.keys(infoCtrl.data) track by $index")
                            tr
                                th(scope='row') {{$index + 1}}
                                td {{item}}
                                td {{infoCtrl.data[item]}}




        script(src='../bower_components/angular/angular.min.js')
        script(src='../bower_components/jquery/dist/jquery.js')
        script(src='../bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='../bower_components/q/q.js')
        script(src='../bower_components/lodash/dist/lodash.js')
        script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBW6xvL6AD_d69u3w4RbiSA3hQJ9xxIQrI")
        script(src='js/app.js')
        script(src='js/factories/shareEventFactory.js')
        script(src='js/factories/fetchNsiFactory.js')
        script(src='js/controllers/maps/mapsCtrl.js')
        script(src='js/controllers/infoList/infoListCtrl.js')
